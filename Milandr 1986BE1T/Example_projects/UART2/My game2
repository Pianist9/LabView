void TIMER2_IRQHandler (void)
{
	

	if ((MDR_TIMER2->STATUS&0x02)==0x02)
	{
	MDR_TIMER2->STATUS =(0<<2);
	MDR_PORTC->RXTX ^= 0x04;  //светодиод;   //Показываем что прерывание обработано
	  
	                    MDR_UART2->DR = 8;
				              //++;
				              //if (b > 57)b = 48;		
						
  }
}